    <example name="mobile_first_responsive_design">
        <description>Implementing mobile-first responsive design principles</description>
        <workflow>
            <step>Start with mobile layout design</step>
            <step>Define tablet breakpoint styles</step>
            <step>Add desktop enhancements</step>
            <step>Test across all screen sizes</step>
            <step>Optimize touch interactions</step>
        </workflow>

        <breakpoint_strategy>
            <breakpoint min="0" max="767px">Mobile - Single column, stacked layout</breakpoint>
            <breakpoint min="768px" max="1023px">Tablet - Two columns, larger touch targets</breakpoint>
            <breakpoint min="1024px">Desktop - Multi-column, hover states</breakpoint>
        </breakpoint_strategy>
    </example>

